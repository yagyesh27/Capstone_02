<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#d3ffda"
            android:onClick="gotoapp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/app_name"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#d6122a"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt"
                android:contentDescription="@string/txt"
                android:id="@+id/textViewW1"
                android:layout_margin="5dp"
                android:textColor="#0d59b1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt"
                android:text="@string/txt"
                android:id="@+id/textViewW2"
                android:layout_margin="5dp"
                android:textColor="#0d59b1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt"
                android:text="@string/txt"
                android:id="@+id/textViewW3"
                android:layout_margin="5dp"
                android:textColor="#0d59b1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt"
                android:text="@string/txt"
                android:id="@+id/textViewW4"
                android:layout_margin="5dp"
                android:textColor="#0d59b1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt"
                android:text="@string/txt"
                android:id="@+id/textViewW5"
                android:layout_margin="5dp"
                android:textColor="#0d59b1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt"
                android:text="@string/txt"
                android:id="@+id/textViewW6"
                android:layout_margin="5dp"
                android:textColor="#0d59b1"
                android:textSize="20dp" />

        </LinearLayout>



</RelativeLayout>